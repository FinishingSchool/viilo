<h1>Add Result</h1>

{{#if winnerMessage}}
  {{winnerMessage}}
{{/if}}

{{#if loserMessage}}
  {{loserMessage}}
{{/if}}

{{#if error}}
  Error: {{error}}
{{/if}}

<form action="/results" method="POST">
    <select name="winnerId">
        <option value="">Winner</option>
        {{#each players}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    beat
    <select name="loserId">
        <option value="">Loser</option>
        {{#each players}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br>
    <br>
    <input type="submit" value="Submit">
</form>

<h1>Results</h1>

<ul>
    {{#each results}}
    <li>{{winner}} beat {{loser}} on {{date}}</li>
    {{/each}}
</ul>